<div class="contents">
  <div class="side_view">
  </div>
  <div class="posts_new">
      <div class="card">
        <% @posts.each do |post| %>
      <svg class="bd-placeholder-img card-img-top" width="100%" height="180" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Image cap">
      <title>Placeholder</title>
      <rect width="100%" height="100%" fill="#868e96"/><text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text></svg>
       <div class="card-body">
        <h1 class="card-text"><%= post.content %></h1>
        <p class="card-time">最終編集　<%= post.updated_at.strftime("%Y-%m-%d %H:%M") %></p>
        <a href="#" class="btn btn-primary">詳細へ</a>
      </div>
          <% end %>
        </div>
      </div>
  </div>
  <div class="posts_limit">
  </div>
</div>