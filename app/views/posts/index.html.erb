<div class="contents">
  <%# 新規投稿一覧ここから %>
  <div class="posts_new">
     <div class="row row-cols-2">
      <% @posts.each do |post| %>
      <div class="card col-sm">
       <img src="<%= "/post_images/#{post.image}" %>" alt="投稿した画像" class="post_image">
       <div class="card-body">
       <span class="badge badge-pill badge-info"><%= post.category %></span>
        <p class="card-text"><%= post.content %></p>
        <span class="badge badge-success">場所</span><p class="card-area"><%= post.area %></p>
         <span class="badge badge-warning">期限: <%= l post.limit, format: :short  %></span><br>
         <span class="badge badge-danger">¥</span>　<%= post.price.to_i %>
        <span class="badge badge-secondary">最終編集: <%= l  post.updated_at, format: :long %></span><br>
        <%= link_to "/posts/#{post.id}" do %>
          <button class="btn btn-primary btn-sm">詳細へ</button>
      <% end %>
      </div>
  </div>
    <% end %>
        </div>
      </div>
  </div>
