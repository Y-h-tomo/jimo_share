<div class="container-fluid new-container">
  <div class="post-form border border-info">
    <h1 class="form-heading">投稿する</h1>
    <div class="form-body">
      <% @post.errors.full_messages.each do |message| %>
      <div class="form-error">
      <%= message %>
      </div>
      <% end %>
        <div class="new-post-form">
        <%= form_tag("/posts/create", {multipart: true}) do %>
          <div class="form-group">
            <label  for="exampleFormControlSelect1">分類選択</label>
            <select class="form-control w-50" id="exampleFormControlSelect1" name="category">
            <option>収穫物</option>
            <option>一般食品</option>
            <option>冷凍冷蔵食品</option>
            <option>手作り</option>
            <option>その他</option>
            </select>
          </div>
          <div class="form-group">
          <label>対象品画像:</label>
          <input  name="image" type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>
          <div class="form-group">
          <label>引き渡し場所:</label>
          <input class="border  w-75" name="area"  type="text" placeholder="引き渡し場所" autocomplete="address-level2">
          </div>
          <div class="form-group">
          <label>引き渡し期限日:</label>
          <input class="border " name="limit" type="date">
          </div>
          <div class="form-group">
          <textarea class="border new-content" name="content" placeholder="個数や数量、条件などを記入してください"></textarea>
          </div>
          <div class="input-group ">
            <div class="input-group-prepend mb-4">
            <span class="input-group-text">¥</span>
            </div>
            <input name="price" type="text" class="form-control" placeholder="価格を記入してください">
          </div>
        <input class="btn btn-outline-info" type="submit" value="投稿">
        <% end %>
        </div>
    </div>
  </div>
</div>

